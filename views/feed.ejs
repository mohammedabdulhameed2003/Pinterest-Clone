<% include ./partials/header.ejs %>
  <style>
    .masonry {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 16px;
    }
    .masonry-item {
      break-inside: avoid;
    }
  </style>
  <div class="w-full min-h-screen bg-[url('https://images.unsplash.com/photo-1592492159418-39f319320569?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] px-10 py-8 text-black">
    <div class="cards masonry">
        <% posts.forEach(function(elem){ %>
            <div class="card masonry-item">
                <div class="object-cover rounded-lg overflow-hidden">
                    <img src="/images/uploads/<%= elem.image %>" class="w-full h-auto">
                </div>
                <h5 class="text-white text-xm"><%= elem.title %></h5>
                <h6 class="text-white opacity-500">@<%= elem.user.username %></h6>
            </div>
       <% }) %>
    </div>
  </div>
<% include ./partials/footer.ejs %>
